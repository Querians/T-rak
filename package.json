{
  "name": "t-rak",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky install",
    "format": "prettier --check --ignore-path .gitignore .",
    "format:fix": "prettier --write --ignore-path .gitignore .",
    "migrate:dev": "pnpm dotenv -e .env.local -- prisma migrate dev && pnpm exec lib/seedTriggers.js",
    "db:push": "pnpm dotenv -e .env.local -- prisma db push",
    "db:seed": "pnpm dotenv -e .env.local -- prisma db seed",
    "db:studio": "pnpm dotenv -e .env.local -- prisma studio",
    "db:generate": "pnpm dotenv -e .env.local -- prisma generate",
    "db:reset": "pnpm dotenv -e .env.local -- prisma migrate reset --force",
    "production:build": "pnpm prisma generate && pnpm prisma migrate deploy && pnpm next build",
    "pw:test": "pnpm dotenv -e .env.local -- playwright test",
    "pw:test-api": "pnpm dotenv -e .env.local -- playwright test tests/api",
    "pw:test-frontend": "pnpm dotenv -e .env.local -- playwright test tests/frontend",
    "pw:report":"pnpm exec playwright show-report"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/modifiers": "^7.0.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@nextui-org/react": "^2.2.9",
    "@prisma/client": "5.6.0",
    "@supabase/auth-helpers-nextjs": "^0.8.7",
    "@supabase/supabase-js": "^2.38.4",
    "@tanstack/react-query": "^5.8.4",
    "@tanstack/react-query-devtools": "^5.8.4",
    "@tracksuitdev/use-select": "^1.1.1",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "framer-motion": "^10.16.5",
    "next": "14.0.1",
    "playwright": "^1.40.0",
    "postgres": "^3.4.3",
    "prettier": "^3.1.0",
    "react": "^18.2.0",
    "react-component-export-image": "^1.0.6",
    "react-dom": "^18.2.0",
    "react-widgets": "^5.8.4",
    "react-widgets-tailwind": "^1.1.5",
    "sweetalert2": "^11.10.1"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^14.0.3",
    "@playwright/test": "^1.40.0",
    "@tanstack/eslint-plugin-query": "^5.8.4",
    "@types/node": "^20.9.2",
    "autoprefixer": "^10.4.16",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.54.0",
    "eslint-config-next": "14.0.1",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "postcss": "^8.4.31",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "prisma": "^5.6.0",
    "tailwindcss": "^3.3.5"
  }
}
